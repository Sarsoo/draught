pipeline {
    agent any

    stages {
        stage('Deploy') {
            when { branch 'master' }
            steps {
                script {
                    dir('draught_web')
                    {
                        docker.withRegistry('https://registry.sarsoo.xyz', 'git-registry-creds')
                        {
                            docker.build("sarsoo/draught:latest").push()
                        }
                    }
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}